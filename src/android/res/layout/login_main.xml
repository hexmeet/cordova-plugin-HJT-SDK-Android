<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:paddingTop="32dp">

    <LinearLayout
        android:id="@+id/login_private_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_private"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/icon_login_private" />

        <TextView
            android:id="@+id/title_login_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_private"
            android:textColor="@color/title_bar"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/login_cloud"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_login_cloud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_cloud"
            android:textColor="@color/title_bar"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo_pic"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_above="@id/login_private_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/text_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/company"
        android:textColor="@color/transparent"
        android:textSize="14sp" />

</RelativeLayout>